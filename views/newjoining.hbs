                <td><input type="text" name="DateofBirth2" id="kit" class="kit" onfocus="(this.type='date')"
                        onblur="if(!this.value) this.type='text'" max="9999-12-31"></td>
            </tr>
            <tr>
                <td><input type="text" name="nameofSpouseandChildren3" id="kit" class="kit"></td>
                <td><input type="text" name="Relationship3" id="kit" class="kit"></td>
                <td><input type="text" name="DateofBirth3" id="kit" class="kit" onfocus="(this.type='date')"
                        onblur="if(!this.value) this.type='text'" max="9999-12-31"></td>
            </tr>
            <tr>
                <td></td>
                <td colspan="6"><input type="submit" value="submit" onclick="myfun()"></td>
            </tr>
            <!-- Add more rows as needed -->
        </table>
        <script>
            function myfun() {
                alert("done");
                window.location.href = "/homepage";
            }
        </script>


    </form>
